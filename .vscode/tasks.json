// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "extension-dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"compile",
				"--",
				"--watch"
			],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"panel": "dedicated",
				"reveal": "never"
			},
			"problemMatcher": "$esbuild-watch"
		}
	]
}